{
  "manifest_version": 3,
  "name": "MAV - 多模型 AI 投票",
  "version": "1.0.0",
  "description": "同時查詢多個 LLM，互相評審，產出綜合答案",
  "permissions": ["storage", "sidePanel", "activeTab", "scripting", "clipboardRead", "clipboardWrite", "contextMenus"],
  "host_permissions": ["https://openrouter.ai/*", "<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "options_page": "options/index.html",
  "icons": {
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "開啟 MAV 面板",
    "default_icon": {
      "32": "icons/icon32.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
    }
  }
}

